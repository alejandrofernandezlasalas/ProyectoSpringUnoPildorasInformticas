<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="
    http://www.springframework.org/schema/beans   
    http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
    http://www.springframework.org/schema/context 
    http://www.springframework.org/schema/context/spring-context-3.1.xsd
">
	<!-- Creacion de la Dependencia -->
	<bean id = "miInforme" class = "es.pildoras.IoC.Informe">
	
	</bean>

	<bean id = "miEmpleado" class = "es.pildoras.IoC.DirectorEmpleado">
		<!-- Creacion de la Dependencia con constructor-->
		<constructor-arg ref = "miInforme"></constructor-arg>
		
		<!-- Inyeccion de campos -->
		<property name = "email" value = "equipoDirectivo@pildorasinformaticas.es"></property>
		
		<property name = "nombreEmpresa" value = "Pildoras Informaticas"></property>
	</bean>

	<bean id = "miSecretarioEmpleado" class = "es.pildoras.IoC.SecretarioEmpleado">
		
		<!-- Creacion de la Dependencia con setter -->
		<property name = "informeNuevo" ref = "miInforme"></property>
		
		<!-- Inyeccion de campos -->
		<property name = "email" value = "secretaria@pildorasinformaticas.es"></property>
		
		<property name = "nombreEmpresa" value = "Pildoras Informaticas"></property>
	</bean>
</beans>